my_string="The quick Brow Fox"    
count1 = 0
count2 = 0
def fun(count1):
    for i in my_string:
        if (i.islower()):
               count1 = count1+1
    return  count1
def fun1(count2):
    for i in my_string:
        if (i.isupper()):
               count2 = count2+1
    return  count2



result1=fun1(count2)    
print("No. of Upper case characters : ",result1)
result=fun(count1)    
print("No. of Lower case characters : ",result)
